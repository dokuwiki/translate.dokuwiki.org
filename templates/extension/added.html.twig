{% extends 'default/index.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li><a href="{{ path('dokuwiki_translator_homepage') }}">Home</a></li>
        <li class="active">Add a {{ repository.type|capitalize }}</li>
    </ol>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>{{ repository.type|capitalize }} Added</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <p>
                    Your {{ repository.type }} has been added, but needs to be activated first.
                </p>
                <p>
                    We have sent you an email with an <b>activation link</b> for your {{ repository.type }}.
                    After confirming your submission, your {{ repository.type }} will be available for translation.
                </p>
            </div>
            <div class="col-md-4">
                {% include 'template/box.html.twig' %}
            </div>

        </div>
    </div>

{% endblock %}
